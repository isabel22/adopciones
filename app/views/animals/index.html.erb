<body>
  <div class="container">
    <h1> Animals </h1>

    <div class="text-right">
      <%= link_to "New animal", new_animal_path, class: "btn btn-primary" %>
      <%= link_to "Show animal species", animal_species_path, class: "btn btn-primary" %>
    </div><br>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Rescued?</th>
            <th>Birth/Rescued date</th>
            <th>Created at</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @animals.each do |animal| %>
            <tr>
              <td><%= animal.name %></td>
              <td><%= animal.gender %></td>
              <td><%= animal.rescued %></td>
              <td><%= animal.birthdate_rescuedate %></td>
              <td><%= animal.created_at %></td>
              <td>
                <%= link_to 'Show', animal_show_path(animal.id) %>
                <%= link_to 'Edit', animal_edit_path(animal.id) %>
                <%= link_to 'Delete', animal_delete_path(animal.id), method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</body>
