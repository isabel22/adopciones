<% disabled ||= false %>

<%= form_for @request, url: wizard_path, method: :patch do |f| %>
  <% if disabled %>
    <fieldset disabled>
  <% end %>
  <%= f.hidden_field(:animal_id, :value => @animal_id) %>
  <div class="form-group">
    <%= label_tag(:uid, "National ID: ") %>
    <%= f.text_field :uid, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag(:first_name, "First Name: ") %>
    <%= f.text_field :first_name, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag(:last_name, "Last Name: ") %>
    <%= f.text_field :last_name, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag(:birthdate, "Date of Birth: ") %>
    <%= f.date_field :birthdate, :required => true, max: Date.today, min: 100.years.ago %>
  </div>
  <%= f.hidden_field(:email, :value => current_user.email) %>
  <%= f.hidden_field(:form_status, :value => 'personal') %>
  <div class="form-group">
    <%= label_tag(:address, "Address: ") %>
    <%= f.text_field :address, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag(:home_phone, "Home phone number: ") %>
    <%= f.text_field :home_phone, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag(:cellphone, "Cellphone: ") %>
    <%= f.text_field :cellphone, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag(:country, "Country: ") %>
    <%= select_tag "request[country]", options_for_select(@countries, @current_country), required: true %>
  </div>
  <% if disabled %>
    </fieldset>
  <% else %>
    <div class="actions">
      <%= f.submit "Next" %>
    </div>
  <% end %>
<% end %>
