<%= form_for request, url: path, method: :post do |f| %>
  <%= f.hidden_field(:animal_id, :value => @animal_id) %>
  <div class="form-group">
    <%= label_tag(:uid, "National ID: ") %>
    <%= f.text_field :uid, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag(:full_name, "Full Name: ") %>
    <%= f.text_field :first_name, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag(:email, "Email: ") %>
    <%= f.text_field :email, :required => true %>
  </div>
  <div class="form-group">
    <%= label_tag(:phone, "Phone number: ") %>
    <%= f.text_field :phone, :required => true %>
  </div>
<% end %>
